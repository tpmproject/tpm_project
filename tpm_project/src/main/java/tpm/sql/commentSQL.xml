<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tpm.comment">

	<resultMap id="memberResultMap" type="tpm.member.model.MemberDTO" >
		<id property="member_idx" column="member_idx"/>
		<result property="member_id" column="member_id"/>
		<result property="member_name" column="member_name"/>
		<result property="member_img" column="member_img"/>
	</resultMap>
	
    <resultMap id="commentResultMap" type="tpm.comment.model.CommentDTO">
        <id property="comment_idx" column="comment_idx"/>
        <result property="work_idx" column="work_idx"/>
        <result property="member_idx" column="member_idx"/>
        <result property="comment_content" column="comment_content"/>
        <result property="comment_date" column="comment_date"/>
        <collection property="memberdto" resultMap="memberResultMap"/>
    </resultMap>
    
	<insert id="addComment" parameterType="tpm.comment.model.CommentDTO">
		insert into tpm_comment
		values(comment_idx.nextval, #{work_idx}, #{member_idx}, #{comment_content}, sysdate)
	</insert>
	
	<select id="listComment" parameterType="int" resultType="tpm.comment.model.CommentDTO">
		select a.*, b.member_id, b.member_name, b.member_img 
		from tpm_comment a
		left join tpm_member b
		on b.member_idx=a.member_idx
		where work_idx=283
		order by comment_date asc
	</select>
	<select id="commentList" parameterType="int" resultType="commentResultMap">
	SELECT * FROM tpm_comment c, tpm_member m 
		WHERE c.member_idx = m.member_idx and work_idx=#{work_idx}
	</select>
</mapper>